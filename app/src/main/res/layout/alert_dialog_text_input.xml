<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_header_height"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/dialog_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/input_dialog_header"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_title_text_size" />

    </FrameLayout>

    <EditText
        android:id="@+id/text_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/base_margin"
        android:hint="@string/word_to_search"
        android:inputType="text"
        android:lines="1"
        android:textSize="@dimen/default_textRecyclerView_size" />

</LinearLayout>